<?xml version="1.0" encoding="utf-8"?>
	<!-- definiere Namespace app: fuer eigene Attribute-->
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.linkesoft.apfel2"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<!-- Relative Layout ordnet Kinder relativ zueinander an -->
	<RelativeLayout
		android:id="@+id/RelativeLayout01"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<com.linkesoft.apfel2.ApfelView
			android:id="@+id/ApfelView"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			app:timerLabel="@+id/TimerLabel" /> <!-- TimerLabel ist in res/values/attrs.xml definiert-->
		<TextView
			android:text="time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/TimerLabel"
			android:layout_alignRight="@+id/ApfelView"
			android:layout_alignBottom="@+id/ApfelView"
			android:layout_marginRight="5dip"
			android:background="#44000000"
			android:padding="2dip"
			android:layout_marginBottom="5dip"
			android:textColor="#ffffff"></TextView>
	</RelativeLayout>
</LinearLayout>
